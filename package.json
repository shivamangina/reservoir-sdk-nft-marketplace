{
  "name": "node-typescript-boilerplate",
  "version": "0.0.1",
  "description": "Minimalistic boilerplate to quick-start Node.js development in TypeScript with watch mode. build using Hapi",
  "engines": {
    "node": ">= 18.12 <19"
  },
  "author": "Shiva Kumar Mangina <shiva2nani.mangina@gmail.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "@hapi/hapi": "^21.3.2",
    "@reservoir0x/reservoir-sdk": "^1.5.1",
    "@types/hapi": "^18.0.11",
    "node-fetch": "^2.7.0",
    "tslib": "~2.6",
    "viem": "^1.16.3"
  },
  "scripts": {
    "start": "node build/src/index.js",
    "prebuild": "npm run lint",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "lint": "eslint . --ext .ts --ext .mts",
    "prettier": "prettier --config .prettierrc --write .",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"tsc -w -p tsconfig.json\" \"nodemon build/src/index.js\""
  },
  "devDependencies": {
    "@types/concurrently": "^7.0.0",
    "@types/jest": "~29.5",
    "@types/node": "~18",
    "@typescript-eslint/eslint-plugin": "~6.2",
    "@typescript-eslint/parser": "~6.2",
    "concurrently": "^8.2.1",
    "eslint": "~8.46",
    "eslint-config-prettier": "~9.0",
    "eslint-plugin-jest": "~27.2",
    "jest": "~29.6",
    "nodemon": "^3.0.1",
    "prettier": "~3.0",
    "rimraf": "~5.0",
    "ts-api-utils": "~1.0",
    "ts-jest": "~29.1",
    "typescript": "~5.1"
  },
  "volta": {
    "node": "18.12.1"
  }
}
